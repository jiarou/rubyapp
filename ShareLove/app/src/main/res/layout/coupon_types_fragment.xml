<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".CouponMainActivity"
    android:background="#FFFFFF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginTop="80dp" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/gridView"
        android:numColumns="2"
        android:layout_marginTop="30dp"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp"
        android:background="@drawable/blue_gradient_grid_couponfrag"
        android:layout_below="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="您目前持有愛心點數 "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView27"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginTop="90dp"
        android:text="點"
        android:layout_marginLeft="5dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="0 - 9 點"
                android:id="@+id/coupon_type1"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#FFFF"
                android:textSize="18dp"
                android:background="@drawable/coupontypebtn" />

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="10 - 19 點"
                android:id="@+id/coupon_type2"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/textView2"
                android:layout_marginLeft="-8dp"
                android:textColor="#FFFF"
                android:textSize="18dp"
                android:background="@drawable/coupontypebtn" />

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="> 20 點"
                android:id="@+id/coupon_type3"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_column="2"
                android:layout_marginLeft="-8dp"
                android:textColor="#FFFF"
                android:textSize="18dp"
                android:background="@drawable/coupontypebtn" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
