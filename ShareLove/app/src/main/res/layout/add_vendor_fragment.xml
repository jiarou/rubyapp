<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="新增店家"
            android:id="@+id/textView14"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="經過審核的店家將會顯示在頁面上，並分發獎勵給您"
            android:id="@+id/textView15"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.85"
        android:background="#FFFF">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="店家名稱"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/textView32" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:ems="14"
                    android:id="@+id/Name_edit"
                    android:layout_weight="0.60"
                    android:background="@drawable/bg_edittext_selector"
                    android:layout_centerVertical="true"
                    android:layout_alignStart="@+id/textView32"
                    android:layout_marginTop="10dp"
                    android:autoText="false" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="店家地址"
                    android:id="@+id/textView33"
                    android:layout_marginLeft="30dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:inputType="textPostalAddress"
                    android:ems="14"
                    android:id="@+id/Address_edit"
                    android:layout_weight="1"
                    android:layout_alignParentStart="false"
                    android:background="@drawable/bg_edittext_selector"
                    android:layout_marginTop="10dp"
                    android:layout_alignStart="@+id/textView33"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="店家類別"
                    android:id="@+id/textView22"
                    android:layout_marginLeft="30dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/variety_spinner"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignStart="@+id/textView22"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="其他資訊"
                    android:id="@+id/textView13"
                    android:layout_marginLeft="30dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:inputType="textMultiLine"
                    android:ems="14"
                    android:id="@+id/info_edit"
                    android:hint=" 營業時間(例: 星期一 10:00-21:00)"
                    android:layout_marginTop="10dp"
                    android:layout_alignStart="@+id/textView13"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_edittext_selector" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="提        交"
            android:id="@+id/add_submit"
            android:layout_weight="0.1"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#B3E5FC"
            android:textColor="#0288D1"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
